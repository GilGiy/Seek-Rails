.jumbotron
	%h2= @post.title
	%h5= "Published #{@post.created_at}"
	.well
		%p= @post.body

.jumbotron
	%h2 Answers
	%br
	%br
	-@comments.each do |c|
		.panel.panel-default
			.panel-body
				.p=c.content

.jumbotron
	%h2 Write your Answer
	%br
	.well
		= simple_form_for(@comment, html: { class: 'form-horizontal' }) do |c|
			= c.input :content, :label => false
			= c.hidden_field :post_id, :value => @post.id
			%br
			= c.button :submit, "Submit Answer", class: "btn btn-success"

	%center
		= link_to "Return to Index", "/"
